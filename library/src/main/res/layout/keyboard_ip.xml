<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/sharp_keyboard"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layout_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/keyboard_ip"
        android:layout_alignRight="@+id/keyboard_ip"
        android:layout_centerHorizontal="true"
        android:background="@color/key_stroke_color"
        android:orientation="horizontal">

        <TextView
            android:id="@id/text_input_0"
            style="@style/KeyboardInputIP"
            android:text="000"/>

        <TextView
            android:id="@id/text_input_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/text_input_1"
            style="@style/KeyboardInputIP" />

        <TextView
            android:id="@id/text_input_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/text_input_2"
            style="@style/KeyboardInputIP" />

        <TextView
            android:id="@id/text_input_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/text_input_3"
            style="@style/KeyboardInputIP" />

    </LinearLayout>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_IP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/key_stroke_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/key_bg_selector"
        android:keyTextColor="@color/key_text_color"
        android:keyTextSize="@dimen/key_textSize"
        android:paddingBottom="1dp"
        android:shadowRadius="0" />

</RelativeLayout>


