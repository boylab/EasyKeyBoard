<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="3dp">

        <Button
            android:id="@+id/keyboard_commit"
            style="@style/KeyboardInputNumber"
            android:layout_weight="1.5"
            android:text="完成"
            android:textSize="14sp" />

        <TextView
            android:id="@id/keyboard_number_1"
            style="@style/KeyboardInputNumber"
            android:hint="S" />

        <TextView
            android:id="@id/keyboard_number_2"
            style="@style/KeyboardInputNumber"
            android:hint="Z" />

        <TextView
            android:id="@id/keyboard_number_3"
            style="@style/KeyboardInputNumber"
            android:hint="0" />

        <TextView
            android:id="@id/keyboard_number_4"
            style="@style/KeyboardInputNumber"
            android:hint="0" />

        <TextView
            android:id="@id/keyboard_number_5"
            style="@style/KeyboardInputNumber"
            android:hint="0" />

        <TextView
            android:id="@id/keyboard_number_6"
            style="@style/KeyboardInputNumber"
            android:hint="0" />

        <TextView
            android:id="@id/keyboard_number_0"
            style="@style/KeyboardInputNumber"
            android:hint="粤"
            android:textSize="26sp" />
    </LinearLayout>


    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/key_stroke_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/key_bg_selector"
        android:keyTextColor="@color/key_text_color"
        android:paddingBottom="1dp"
        android:shadowRadius="0" />

</LinearLayout>


