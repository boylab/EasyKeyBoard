<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="key_stroke_gap">1px</dimen>
    <dimen name="keyboard_radius">5dp</dimen>

    <dimen name="input_radius">1dp</dimen>

    <dimen name="key_radius">1dp</dimen>
    <dimen name="key_height">70dp</dimen>
    <dimen name="key_double_height">42dp</dimen>

    <style name="KeyboardInputNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textColorHint">#DFDFDF</item>
        <item name="android:textSize">28sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sharp_number_keyboard</item>
    </style>

    <style name="KeyboardInputNumber.Password">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="keyboard_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>