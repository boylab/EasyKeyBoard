<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0dp"
    android:keyWidth="@dimen/number_keyWidth"
    android:keyHeight="@dimen/number_keyHeight"
    android:verticalGap="0dp">

    <Row>
        <Key
            android:codes="@integer/code_1"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/label_1" />
        <Key
            android:codes="@integer/code_2"
            android:keyLabel="@string/label_2" />
        <Key
            android:codes="@integer/code_3"
            android:keyLabel="@string/label_3" />
        <Key
            android:codes="@integer/code_CANCEL"
            android:keyHeight="@dimen/number_CANCEL_keyHeight"
            android:keyEdgeFlags="right"
            android:keyLabel="@string/label_CANCEL" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_4"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/label_4" />
        <Key
            android:codes="@integer/code_5"
            android:keyLabel="@string/label_5" />
        <Key
            android:codes="@integer/code_6"
            android:keyLabel="@string/label_6" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_7"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/label_7" />
        <Key
            android:codes="@integer/code_8"
            android:keyLabel="@string/label_8" />
        <Key
            android:codes="@integer/code_9"
            android:keyLabel="@string/label_9" />
        <Key
            android:codes="@integer/code_DONE"
            android:keyHeight="@dimen/number_DONE_keyHeight"
            android:keyEdgeFlags="right"
            android:keyLabel="@string/label_DONE" />
    </Row>

    <Row>
        <Key
            android:codes="@integer/code_0"
            android:keyWidth="@dimen/number_0_keyWidth"
            android:keyEdgeFlags="left"
            android:keyLabel="@string/label_0" />
        <Key
            android:codes="@integer/code_Delete"
            android:isRepeatable="true"
            android:keyIcon="@drawable/icon_key_delete" />
    </Row>

</Keyboard>